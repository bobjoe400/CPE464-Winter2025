    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) WindowTests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/project3/windowTests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

    {
        "name": "(gdb) P2 Server",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/p2/server",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    },
    {
        "name": "(gdb) P2 Client",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/p2/cclient",
        "args": ["localhost", "${input:portPrompt}"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    },

    {
        "name": "(gdb) old P2 Client",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/project2/cclient",
        "args": ["client1", "localhost", "54321"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }
    ],
    "inputs": [
        {
          "id": "portPrompt",
          "type": "promptString",
          "description": "Enter Port Number",
          "default": ""
        }
    ]
}